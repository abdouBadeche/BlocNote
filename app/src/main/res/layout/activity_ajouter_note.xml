<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterNote">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"

                android:elevation="2dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:scaleX="1"
                        android:scaleY="1"
                        app:srcCompat="@drawable/add_note" />

                    <TextView
                        android:id="@+id/AddAppTitleTop"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="10"
                        android:paddingHorizontal="10dp"
                        android:text="Nouvelle Note"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/imageCancel"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_weight="1"
                        android:scaleX="1"
                        android:scaleY="1"
                        app:srcCompat="@drawable/close" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="2dp"
                        android:paddingTop="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:minHeight="40dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/tvAddNoteTitleSpace"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:height="30dp"
                                    android:maxHeight="30dp"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="2dp"
                                    android:text="Note titre"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />


                                <EditText
                                    android:id="@+id/tvAddNoteTitleInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Titre"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textColorHint="#909090"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tvAddNoteTacheSpace"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="30dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:height="30dp"
                                    android:maxHeight="30dp"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="2dp"
                                    android:text="Tache"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/tvAddNoteTacheInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Tache"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textColorHint="#909090"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/btnAddTache"
                                android:layout_width="wrap_content"
                                android:gravity="center"

                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="2"
                                android:text="Ajouter une tache" />
                            <TextView
                                android:id="@+id/liste"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxHeight="30dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:text="Liste des taches ajoutÃ©es :\n"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/tvAddNoteImage"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="30dp"
                                android:onClick="pickPhoto"
                                app:srcCompat="@drawable/add_image" />

                            <LinearLayout
                                android:id="@+id/tvAddNoteDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:height="30dp"
                                    android:maxHeight="30dp"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="2dp"
                                    android:text="Note Description"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />


                                <EditText
                                    android:id="@+id/tvAddNoteDescriptionInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:hint="Description"
                                    android:inputType="text|textMultiLine"
                                    android:minHeight="150dp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textColorHint="#909090"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/btnAddNote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="2"
                                android:text="Ajouter" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </ScrollView>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>